example = "Homework"
print (example[0])
print (example[-1])
print (example[3:])
print (example[::-1])
print (example[1::2])


############2 Вариант (просто для себя)####################

example = input()
print ("В слове", example,":", len(example), "букв")
print ("Первая буква в слове", example,": буква", example[0])
print ("Последняя буква в слове", example, ": буква",example[-1])
x= len(example) #длина слова
print (x/2, type(x)) #Половина длины слова.Для проверки
if x%2==0: print("Четное количество букв") #Определяем в слове четное или нечетное количество букв
else: print("Нечетное количество букв")
if x%2!=0: x=int(x)
if len(example)%x==0: print ("Количество букв в половине слова (нечетное количество символов)", x+1)
else: print ("Количество букв в половине слова (нечетное количеством символов)", x)
print ("Половина слова с нечетным количеством символов:", example[(x-1):])
print ("Слово наоборот:", example[::-1])
print ("Каждая вторая буква в слове:", example[1::2])
